@using TravelTripProject.Models.Sınıflar
@model List<Blog>

<div class="box1-left">
    @foreach (var x in Model)
    {
        <div class="bot-img">
            <a href="/Blog/BlogDetay/@x.ID">
                <img src="@x.BlogImage" style="width:120px; height:80px;" alt="" />
</div>
        <div class="bot-desc1">
            <p>@x.Description.Substring(0, 79).. </p>
        </div>
        <div class="clear"></div>
    }
</div>

